<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            <TextView
                android:id="@+id/mallListLayoutTitle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:text="test"
                />

             <RatingBar
                 android:id="@+id/mallListLayoutRatingbar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"/>

                <ImageView
                android:id="@+id/mallListImage"
                android:src="@android:drawable/ic_menu_mylocation"
                android:layout_below="@+id/mallListLayoutRatingbar"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:padding="0dp" />

                <TextView
                    android:id="@+id/mallListCity"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/mallListLayoutRatingbar"
                    android:layout_toRightOf="@+id/mallListImage"
                    android:textSize="15sp"
                    android:text="Gummersbach"
                    />
                <TextView
                    android:id="@+id/mallListDistance"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/mallListLayoutRatingbar"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:text="22km"
                    />



                </RelativeLayout>
            </android.support.v7.widget.CardView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>