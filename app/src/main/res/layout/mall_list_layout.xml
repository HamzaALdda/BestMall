<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            <TextView
                android:id="@+id/mallListLayout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="30dp"
                android:text="test"
                ></TextView>

             <RatingBar
                 android:id="@+id/mallListLayoutRatingbar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/mallListLayout" />


                <ImageView
                    android:id="@android:drawable/ic-menu_mylocation"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:padding="4dp" />
                <TextView
                    android:id="@+id/mallListCity"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="30dp"
                    android:text="Gummersbach"
                    ></TextView>
                <TextView
                    android:id="@+id/mallListDistance"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="30dp"
                    android:text="22km
"
                    ></TextView>



                </RelativeLayout>
            </android.support.v7.widget.CardView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>